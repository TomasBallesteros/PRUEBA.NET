@model Usuario
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
	<div class="user_card">
		<h1>Login</h1>
	</div>
	<div class="card_body">
		<form asp-action="Validar" asp-controller="Autentication" method="post">

			<div class="mb-2">
				<label class="form-label">Usuario</label>
				<input type="text" class="form-control form-control-sm" asp-for="usUsuario" placeholder="****">
			</div>

			<div class="mb-2">
				<label class="form-label">Contraseña</label>
				<input type="password" class="form-control form-control-sm" asp-for="usPassword" placeholder="****">
			</div>
				 		
			<button type="submit" class="btn btn-success btn-sm">Ingresar</button>

		</form>
	</div>
</div>